<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/ed_hex"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/hex_string_text"/>

    <Button
        android:id="@+id/btn_hex_xor"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ed_hex"
        android:text="@string/btn_hex_to_xor_text"/>
    <Button
        android:id="@+id/btn_remove"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ed_hex"
        android:layout_toRightOf="@id/btn_hex_xor"
        android:text="@string/btn_clean_content_text"/>

    <TextView
        android:id="@+id/tv_xor_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/xor_result_text"
        android:layout_below="@+id/btn_hex_xor"/>

</RelativeLayout>